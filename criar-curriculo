    <script>
        // Função para adicionar nova experiência profissional
        document.getElementById('addExperienciaBtn').addEventListener('click', function() {
            const container = document.getElementById('experienciaContainer');
            const itemCount = container.querySelectorAll('.experiencia-item').length + 1;
            const newItem = document.createElement('div');
            newItem.className = 'experiencia-item bg-gray-50 p-4 rounded-lg border border-gray-200 shadow-sm mt-4';
            newItem.innerHTML = `
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-3">
                    <div>
                        <label for="empresa${itemCount}" class="block text-sm font-medium text-gray-700 mb-1">Empresa:</label>
                        <input type="text" id="empresa${itemCount}" name="empresa[]" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Nome da Empresa">
                    </div>
                    <div>
                        <label for="cargo${itemCount}" class="block text-sm font-medium text-gray-700 mb-1">Cargo:</label>
                        <input type="text" id="cargo${itemCount}" name="cargo[]" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Seu cargo">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="periodo${itemCount}" class="block text-sm font-medium text-gray-700 mb-1">Período:</label>
                    <input type="text" id="periodo${itemCount}" name="periodo[]" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Ex: Jan/2020 - Dez/2022 ou Atual">
                </div>
                <div>
                    <label for="descricaoExp${itemCount}" class="block text-sm font-medium text-gray-700 mb-1">Descrição das Responsabilidades/Conquistas:</label>
                    <textarea id="descricaoExp${itemCount}" name="descricaoExp[]" rows="3" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Descreva suas principais responsabilidades e conquistas neste cargo."></textarea>
                </div>
                <button type="button" onclick="this.parentNode.remove()" class="mt-3 bg-red-500 hover:bg-red-600 text-white font-semibold py-1 px-3 rounded-full text-xs transition duration-300 ease-in-out">Remover</button>
            `;
            container.appendChild(newItem);
        });

        // Função para adicionar nova formação acadêmica
        document.getElementById('addFormacaoBtn').addEventListener('click', function() {
            const container = document.getElementById('formacaoContainer');
            const itemCount = container.querySelectorAll('.formacao-item').length + 1;
            const newItem = document.createElement('div');
            newItem.className = 'formacao-item bg-gray-50 p-4 rounded-lg border border-gray-200 shadow-sm mt-4';
            newItem.innerHTML = `
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-3">
                    <div>
                        <label for="instituicao${itemCount}" class="block text-sm font-medium text-gray-700 mb-1">Instituição de Ensino:</label>
                        <input type="text" id="instituicao${itemCount}" name="instituicao[]" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Nome da Instituição">
                    </div>
                    <div>
                        <label for="curso${itemCount}" class="block text-sm font-medium text-gray-700 mb-1">Curso/Formação:</label>
                        <input type="text" id="curso${itemCount}" name="curso[]" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Nome do Curso ou Graduação">
                    </div>
                </div>
                <div>
                    <label for="periodoFormacao${itemCount}" class="block text-sm font-medium text-gray-700 mb-1">Período:</label>
                    <input type="text" id="periodoFormacao${itemCount}" name="periodoFormacao[]" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Ex: 2016 - 2020">
                </div>
                <button type="button" onclick="this.parentNode.remove()" class="mt-3 bg-red-500 hover:bg-red-600 text-white font-semibold py-1 px-3 rounded-full text-xs transition duration-300 ease-in-out">Remover</button>
            `;
            container.appendChild(newItem);
        });

        // Lógica para salvar o currículo (exemplo - precisaria de um backend real)
        document.getElementById('curriculoForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = {};
            formData.forEach((value, key) => {
                // Para campos que podem ter múltiplos valores (como experiência, formação)
                if (key.endsWith('[]')) {
                    const baseKey = key.slice(0, -2);
                    if (!data[baseKey]) {
                        data[baseKey] = [];
                    }
                    data[baseKey].push(value);
                } else {
                    data[key] = value;
                }
            });

            // Adiciona o status dos toggles
            data.curriculoAtivo = document.getElementById('curriculoAtivo').checked;
            data.procurandoEmprego = document.getElementById('procurandoEmprego').checked;

            console.log('Dados do Currículo:', data);
            alert('Currículo salvo com sucesso! (Lógica de salvamento real precisa ser implementada)');
            // Aqui você enviaria 'data' para o seu backend
        });

        // Exemplo de verificação de login ao carregar a página (opcional, para proteção de rota)
        window.onload = function() {
            const isLoggedIn = localStorage.getItem('vinkorLoggedIn');
            if (!isLoggedIn) {
                // Se não estiver logado, redireciona para a página inicial
                // window.location.href = 'index.html';
            }
        };
    </script>

